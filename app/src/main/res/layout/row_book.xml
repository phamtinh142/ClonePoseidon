<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:padding="5dp"
            android:layout_gravity="center"
            android:src="@drawable/logo_user"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <LinearLayout
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/colorBlack"
                    android:id="@+id/txtTitleRowBook"
                    android:text="Tiêu đề"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/colorBlack"
                    android:text="Người đặt: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/colorBlack"
                    android:id="@+id/txtNameRowBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/colorBlack"
                    android:text="Số người: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/colorBlack"
                    android:id="@+id/txtNumberPeopleRowBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/colorBlack"
                    android:text="Thời gian: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/colorBlack"
                    android:id="@+id/txtTimeRowBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:textAllCaps="false"
            android:background="@null"
            android:id="@+id/btnEditRowBook"
            android:text="Chỉnh sửa"
            android:layout_weight="1"
            android:layout_width="150dp"
            android:layout_height="30dp" />

        <View
            android:layout_gravity="center_vertical"
            android:background="@color/colorToolbar"
            android:layout_width="2dp"
            android:layout_height="20dp"/>

        <Button
            android:textAllCaps="false"
            android:background="@null"
            android:id="@+id/btnCancelRowBook"
            android:layout_weight="1"
            android:text="Hủy"
            android:layout_width="150dp"
            android:layout_height="30dp" />

    </LinearLayout>

</LinearLayout>